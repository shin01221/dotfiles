# Pager (tab completion menu)
#######################
set fish_pager_color_background 1a120e
set fish_pager_color_completion d7c2ba
set fish_pager_color_description a08d85
set fish_pager_color_prefix ffb694 --bold --underline
set fish_pager_color_progress e6bead
set fish_pager_color_secondary_background 221a16
set fish_pager_color_secondary_completion f1dfd8
set fish_pager_color_secondary_description 52443d
set fish_pager_color_secondary_prefix e6bead
set fish_pager_color_selected_background --background=322824
set fish_pager_color_selected_completion ffb694
set fish_pager_color_selected_description f1dfd8
set fish_pager_color_selected_prefix ffb694
