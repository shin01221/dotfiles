# Autosuggestions (grey-ish, subtle)
set fish_color_autosuggestion 45464f

# Ctrl+C feedback
set fish_color_cancel ffb4ab

# Commands (main accent)
set fish_color_command b3c5ff --bold

# Comments
set fish_color_comment 8f909a

# Current working directory
set fish_color_cwd c1c6dd
set fish_color_cwd_root ffb4ab

# Command separator like `;` or `&&`
set fish_color_end e1bbdc

# Errors
set fish_color_error ffb4ab

# Special characters like escapes
set fish_color_escape 414659

# Selected command entry in history search
set fish_color_history_current --bold

# Host appearance
set fish_color_host c5c6d0
set fish_color_host_remote ffb4ab

# Keywords like `if`, `for`
set fish_color_keyword b3c5ff

# Highlight results
set fish_color_match e1bbdc

# Default text
set fish_color_normal e3e2e9

# Operators like = + =>
set fish_color_operator c1c6dd

# Options `--flag`
set fish_color_option c1c6dd

# Params/arguments
set fish_color_param e1bbdc

# Strings
set fish_color_quote c1c6dd

# Redirect symbols `>`, `<`, `|`
set fish_color_redirection 324578

# Search highlight colors
set fish_color_search_match e3e2e9 --background=292a2f

# Selection in command line
set fish_color_selection e3e2e9 --background=292a2f

set fish_color_status ffb4ab
set fish_color_user b3c5ff
