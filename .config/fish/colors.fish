# Autosuggestions (grey-ish, subtle)
set fish_color_autosuggestion 4e444b

# Ctrl+C feedback
set fish_color_cancel ffb4ab

# Commands (main accent)
set fish_color_command f3b2e4 --bold

# Comments
set fish_color_comment 9a8d95

# Current working directory
set fish_color_cwd dbbed1
set fish_color_cwd_root ffb4ab

# Command separator like `;` or `&&`
set fish_color_end f5b9a5

# Errors
set fish_color_error ffb4ab

# Special characters like escapes
set fish_color_escape 554050

# Selected command entry in history search
set fish_color_history_current --bold

# Host appearance
set fish_color_host d2c2cb
set fish_color_host_remote ffb4ab

# Keywords like `if`, `for`
set fish_color_keyword f3b2e4

# Highlight results
set fish_color_match f5b9a5

# Default text
set fish_color_normal ecdfe5

# Operators like = + =>
set fish_color_operator dbbed1

# Options `--flag`
set fish_color_option dbbed1

# Params/arguments
set fish_color_param f5b9a5

# Strings
set fish_color_quote dbbed1

# Redirect symbols `>`, `<`, `|`
set fish_color_redirection 67355f

# Search highlight colors
set fish_color_search_match ecdfe5 --background=2f282c

# Selection in command line
set fish_color_selection ecdfe5 --background=2f282c

set fish_color_status ffb4ab
set fish_color_user f3b2e4
set fish_color_valid_path dbbed1 --underline

