# Autosuggestions (grey-ish, subtle)
set fish_color_autosuggestion 53433f

# Ctrl+C feedback
set fish_color_cancel ffb4ab

# Commands (main accent)
set fish_color_command ffb59f --bold

# Comments
set fish_color_comment a08c87

# Current working directory
set fish_color_cwd e7bdb2
set fish_color_cwd_root ffb4ab

# Command separator like `;` or `&&`
set fish_color_end d8c68d

# Errors
set fish_color_error ffb4ab

# Special characters like escapes
set fish_color_escape 5d4037

# Selected command entry in history search
set fish_color_history_current --bold

# Host appearance
set fish_color_host d8c2bc
set fish_color_host_remote ffb4ab

# Keywords like `if`, `for`
set fish_color_keyword ffb59f

# Highlight results
set fish_color_match d8c68d

# Default text
set fish_color_normal f1dfda

# Operators like = + =>
set fish_color_operator e7bdb2

# Options `--flag`
set fish_color_option e7bdb2

# Params/arguments
set fish_color_param d8c68d

# Strings
set fish_color_quote e7bdb2

# Redirect symbols `>`, `<`, `|`
set fish_color_redirection 723522

# Search highlight colors
set fish_color_search_match f1dfda --background=322825

# Selection in command line
set fish_color_selection f1dfda --background=322825

set fish_color_status ffb4ab
set fish_color_user ffb59f
set fish_color_valid_path e7bdb2 --underline

