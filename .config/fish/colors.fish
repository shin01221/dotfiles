# Autosuggestions (grey-ish, subtle)
set fish_color_autosuggestion 51443b

# Ctrl+C feedback
set fish_color_cancel ffb4ab

# Commands (main accent)
set fish_color_command ffb780 --bold

# Comments
set fish_color_comment 9f8d82

# Current working directory
set fish_color_cwd e4bfa7
set fish_color_cwd_root ffb4ab

# Command separator like `;` or `&&`
set fish_color_end c6ca95

# Errors
set fish_color_error ffb4ab

# Special characters like escapes
set fish_color_escape 5b412f

# Selected command entry in history search
set fish_color_history_current --bold

# Host appearance
set fish_color_host d6c3b7
set fish_color_host_remote ffb4ab

# Keywords like `if`, `for`
set fish_color_keyword ffb780

# Highlight results
set fish_color_match c6ca95

# Default text
set fish_color_normal f0dfd6

# Operators like = + =>
set fish_color_operator e4bfa7

# Options `--flag`
set fish_color_option e4bfa7

# Params/arguments
set fish_color_param c6ca95

# Strings
set fish_color_quote e4bfa7

# Redirect symbols `>`, `<`, `|`
set fish_color_redirection 6d3a09

# Search highlight colors
set fish_color_search_match f0dfd6 --background=312822

# Selection in command line
set fish_color_selection f0dfd6 --background=312822

set fish_color_status ffb4ab
set fish_color_user ffb780
set fish_color_valid_path e4bfa7 --underline

