# Autosuggestions (grey-ish, subtle)
set fish_color_autosuggestion 43474e

# Ctrl+C feedback
set fish_color_cancel ffb4ab

# Commands (main accent)
set fish_color_command a1cafd --bold

# Comments
set fish_color_comment 8d9199

# Current working directory
set fish_color_cwd bbc7db
set fish_color_cwd_root ffb4ab

# Command separator like `;` or `&&`
set fish_color_end d7bee4

# Errors
set fish_color_error ffb4ab

# Special characters like escapes
set fish_color_escape 3b4858

# Selected command entry in history search
set fish_color_history_current --bold

# Host appearance
set fish_color_host c3c6cf
set fish_color_host_remote ffb4ab

# Keywords like `if`, `for`
set fish_color_keyword a1cafd

# Highlight results
set fish_color_match d7bee4

# Default text
set fish_color_normal e1e2e8

# Operators like = + =>
set fish_color_operator bbc7db

# Options `--flag`
set fish_color_option bbc7db

# Params/arguments
set fish_color_param d7bee4

# Strings
set fish_color_quote bbc7db

# Redirect symbols `>`, `<`, `|`
set fish_color_redirection 1a4975

# Search highlight colors
set fish_color_search_match e1e2e8 --background=272a2f

# Selection in command line
set fish_color_selection e1e2e8 --background=272a2f

set fish_color_status ffb4ab
set fish_color_user a1cafd
set fish_color_valid_path bbc7db --underline

