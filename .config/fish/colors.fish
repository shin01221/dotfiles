set fish_pager_color_progress e4bfa7
set fish_pager_color_secondary_background 221a14
set fish_pager_color_secondary_completion f0dfd6
set fish_pager_color_secondary_description 51443b
set fish_pager_color_secondary_prefix e4bfa7
set fish_pager_color_selected_background --background=312822
