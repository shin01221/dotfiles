# Autosuggestions (grey-ish, subtle)
set fish_color_autosuggestion 44464f

# Ctrl+C feedback
set fish_color_cancel ffb4ab

# Commands (main accent)
set fish_color_command afc6ff --bold

# Comments
set fish_color_comment 8f9099

# Current working directory
set fish_color_cwd bfc6dc
set fish_color_cwd_root ffb4ab

# Command separator like `;` or `&&`
set fish_color_end dfbbde

# Errors
set fish_color_error ffb4ab

# Special characters like escapes
set fish_color_escape 404659

# Selected command entry in history search
set fish_color_history_current --bold

# Host appearance
set fish_color_host c5c6d0
set fish_color_host_remote ffb4ab

# Keywords like `if`, `for`
set fish_color_keyword afc6ff

# Highlight results
set fish_color_match dfbbde

# Default text
set fish_color_normal e2e2e9

# Operators like = + =>
set fish_color_operator bfc6dc

# Options `--flag`
set fish_color_option bfc6dc

# Params/arguments
set fish_color_param dfbbde

# Strings
set fish_color_quote bfc6dc

# Redirect symbols `>`, `<`, `|`
set fish_color_redirection 2e4578

# Search highlight colors
set fish_color_search_match e2e2e9 --background=282a2f

# Selection in command line
set fish_color_selection e2e2e9 --background=282a2f

set fish_color_status ffb4ab
set fish_color_user afc6ff
set fish_color_valid_path bfc6dc --underline

