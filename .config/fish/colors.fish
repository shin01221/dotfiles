# Autosuggestions (grey-ish, subtle)
set fish_color_autosuggestion 53433e

# Ctrl+C feedback
set fish_color_cancel ffb4ab

# Commands (main accent)
set fish_color_command ffb598 --bold

# Comments
set fish_color_comment a08d86

# Current working directory
set fish_color_cwd e7beae
set fish_color_cwd_root ffb4ab

# Command separator like `;` or `&&`
set fish_color_end d3c78e

# Errors
set fish_color_error ffb4ab

# Special characters like escapes
set fish_color_escape 5d4035

# Selected command entry in history search
set fish_color_history_current --bold

# Host appearance
set fish_color_host d8c2ba
set fish_color_host_remote ffb4ab

# Keywords like `if`, `for`
set fish_color_keyword ffb598

# Highlight results
set fish_color_match d3c78e

# Default text
set fish_color_normal f1dfd9

# Operators like = + =>
set fish_color_operator e7beae

# Options `--flag`
set fish_color_option e7beae

# Params/arguments
set fish_color_param d3c78e

# Strings
set fish_color_quote e7beae

# Redirect symbols `>`, `<`, `|`
set fish_color_redirection 71361c

# Search highlight colors
set fish_color_search_match f1dfd9 --background=322824

# Selection in command line
set fish_color_selection f1dfd9 --background=322824

set fish_color_status ffb4ab
set fish_color_user ffb598
set fish_color_valid_path e7beae --underline

