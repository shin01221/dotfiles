# Autosuggestions (grey-ish, subtle)
set fish_color_autosuggestion 52443d

# Ctrl+C feedback
set fish_color_cancel ffb4ab

# Commands (main accent)
set fish_color_command ffb694 --bold

# Comments
set fish_color_comment a08d85

# Current working directory
set fish_color_cwd e6bead
set fish_color_cwd_root ffb4ab

# Command separator like `;` or `&&`
set fish_color_end d1c88f

# Errors
set fish_color_error ffb4ab

# Special characters like escapes
set fish_color_escape 5c4033

# Selected command entry in history search
set fish_color_history_current --bold

# Host appearance
set fish_color_host d7c2ba
set fish_color_host_remote ffb4ab

# Keywords like `if`, `for`
set fish_color_keyword ffb694

# Highlight results
set fish_color_match d1c88f

# Default text
set fish_color_normal f1dfd8

# Operators like = + =>
set fish_color_operator e6bead

# Options `--flag`
set fish_color_option e6bead

# Params/arguments
set fish_color_param d1c88f

# Strings
set fish_color_quote e6bead

# Redirect symbols `>`, `<`, `|`
set fish_color_redirection 703718

# Search highlight colors
set fish_color_search_match f1dfd8 --background=322824

# Selection in command line
set fish_color_selection f1dfd8 --background=322824

set fish_color_status ffb4ab
set fish_color_user ffb694
set fish_color_valid_path e6bead --underline

