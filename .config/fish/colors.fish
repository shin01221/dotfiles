# Autosuggestions (grey-ish, subtle)
set fish_color_autosuggestion d8c2ba

# Ctrl+C feedback
set fish_color_cancel ba1a1a

# Commands (main accent)
set fish_color_command 8e4d2f --bold

# Comments
set fish_color_comment 85736c

# Current working directory
set fish_color_cwd 77574a
set fish_color_cwd_root ba1a1a

# Command separator like `;` or `&&`
set fish_color_end d2c78f

# Errors
set fish_color_error ba1a1a

# Special characters like escapes
set fish_color_escape ffdbcd

# Selected command entry in history search
set fish_color_history_current --bold

# Host appearance
set fish_color_host 53443e
set fish_color_host_remote ba1a1a

# Keywords like `if`, `for`
set fish_color_keyword 8e4d2f

# Highlight results
set fish_color_match 675f30

# Default text
set fish_color_normal 231a16

# Operators like = + =>
set fish_color_operator 77574a

# Options `--flag`
set fish_color_option 77574a

# Params/arguments
set fish_color_param 675f30

# Strings
set fish_color_quote 77574a

# Redirect symbols `>`, `<`, `|`
set fish_color_redirection ffdbcd

# Search highlight colors
set fish_color_search_match 231a16 --background=f6e4de

# Selection in command line
set fish_color_selection 231a16 --background=f6e4de

set fish_color_status ba1a1a
set fish_color_user 8e4d2f
set fish_color_valid_path 77574a --underline

