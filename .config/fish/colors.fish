# Autosuggestions (grey-ish, subtle)
set fish_color_autosuggestion 46464f

# Ctrl+C feedback
set fish_color_cancel ffb4ab

# Commands (main accent)
set fish_color_command c0c1ff --bold

# Comments
set fish_color_comment 918f9a

# Current working directory
set fish_color_cwd c5c4dd
set fish_color_cwd_root ffb4ab

# Command separator like `;` or `&&`
set fish_color_end e8b9d4

# Errors
set fish_color_error ffb4ab

# Special characters like escapes
set fish_color_escape 454559

# Selected command entry in history search
set fish_color_history_current --bold

# Host appearance
set fish_color_host c7c5d0
set fish_color_host_remote ffb4ab

# Keywords like `if`, `for`
set fish_color_keyword c0c1ff

# Highlight results
set fish_color_match e8b9d4

# Default text
set fish_color_normal e4e1e9

# Operators like = + =>
set fish_color_operator c5c4dd

# Options `--flag`
set fish_color_option c5c4dd

# Params/arguments
set fish_color_param e8b9d4

# Strings
set fish_color_quote c5c4dd

# Redirect symbols `>`, `<`, `|`
set fish_color_redirection 3f4178

# Search highlight colors
set fish_color_search_match e4e1e9 --background=2a292f

# Selection in command line
set fish_color_selection e4e1e9 --background=2a292f

set fish_color_status ffb4ab
set fish_color_user c0c1ff
set fish_color_valid_path c5c4dd --underline

