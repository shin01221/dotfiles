# Autosuggestions (grey-ish, subtle)
set fish_color_autosuggestion 4e4539

# Ctrl+C feedback
set fish_color_cancel ffb4ab

# Commands (main accent)
set fish_color_command f0bf6d --bold

# Comments
set fish_color_comment 9b8f80

# Current working directory
set fish_color_cwd dbc3a1
set fish_color_cwd_root ffb4ab

# Command separator like `;` or `&&`
set fish_color_end b5cea4

# Errors
set fish_color_error ffb4ab

# Special characters like escapes
set fish_color_escape 55442a

# Selected command entry in history search
set fish_color_history_current --bold

# Host appearance
set fish_color_host d2c5b4
set fish_color_host_remote ffb4ab

# Keywords like `if`, `for`
set fish_color_keyword f0bf6d

# Highlight results
set fish_color_match b5cea4

# Default text
set fish_color_normal ece1d4

# Operators like = + =>
set fish_color_operator dbc3a1

# Options `--flag`
set fish_color_option dbc3a1

# Params/arguments
set fish_color_param b5cea4

# Strings
set fish_color_quote dbc3a1

# Redirect symbols `>`, `<`, `|`
set fish_color_redirection 5f4100

# Search highlight colors
set fish_color_search_match ece1d4 --background=2f2921

# Selection in command line
set fish_color_selection ece1d4 --background=2f2921

set fish_color_status ffb4ab
set fish_color_user f0bf6d
set fish_color_valid_path dbc3a1 --underline

