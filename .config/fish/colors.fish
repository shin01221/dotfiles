# Autosuggestions (grey-ish, subtle)
set fish_color_autosuggestion 44474e

# Ctrl+C feedback
set fish_color_cancel ffb4ab

# Commands (main accent)
set fish_color_command a9c7ff --bold

# Comments
set fish_color_comment 8e9099

# Current working directory
set fish_color_cwd bdc7dc
set fish_color_cwd_root ffb4ab

# Command separator like `;` or `&&`
set fish_color_end dcbce1

# Errors
set fish_color_error ffb4ab

# Special characters like escapes
set fish_color_escape 3e4758

# Selected command entry in history search
set fish_color_history_current --bold

# Host appearance
set fish_color_host c4c6cf
set fish_color_host_remote ffb4ab

# Keywords like `if`, `for`
set fish_color_keyword a9c7ff

# Highlight results
set fish_color_match dcbce1

# Default text
set fish_color_normal e2e2e9

# Operators like = + =>
set fish_color_operator bdc7dc

# Options `--flag`
set fish_color_option bdc7dc

# Params/arguments
set fish_color_param dcbce1

# Strings
set fish_color_quote bdc7dc

# Redirect symbols `>`, `<`, `|`
set fish_color_redirection 264777

# Search highlight colors
set fish_color_search_match e2e2e9 --background=282a2f

# Selection in command line
set fish_color_selection e2e2e9 --background=282a2f

set fish_color_status ffb4ab
set fish_color_user a9c7ff
set fish_color_valid_path bdc7dc --underline

