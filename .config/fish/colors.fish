# Autosuggestions (grey-ish, subtle)
set fish_color_autosuggestion 534340

# Ctrl+C feedback
set fish_color_cancel ffb4ab

# Commands (main accent)
set fish_color_command ffb4a4 --bold

# Comments
set fish_color_comment a08c88

# Current working directory
set fish_color_cwd e7bdb4
set fish_color_cwd_root ffb4ab

# Command separator like `;` or `&&`
set fish_color_end dbc58c

# Errors
set fish_color_error ffb4ab

# Special characters like escapes
set fish_color_escape 5d3f39

# Selected command entry in history search
set fish_color_history_current --bold

# Host appearance
set fish_color_host d8c2bd
set fish_color_host_remote ffb4ab

# Keywords like `if`, `for`
set fish_color_keyword ffb4a4

# Highlight results
set fish_color_match dbc58c

# Default text
set fish_color_normal f1dfdb

# Operators like = + =>
set fish_color_operator e7bdb4

# Options `--flag`
set fish_color_option e7bdb4

# Params/arguments
set fish_color_param dbc58c

# Strings
set fish_color_quote e7bdb4

# Redirect symbols `>`, `<`, `|`
set fish_color_redirection 733426

# Search highlight colors
set fish_color_search_match f1dfdb --background=322825

# Selection in command line
set fish_color_selection f1dfdb --background=322825

set fish_color_status ffb4ab
set fish_color_user ffb4a4
set fish_color_valid_path e7bdb4 --underline

