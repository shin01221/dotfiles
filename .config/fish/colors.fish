# Autosuggestions (grey-ish, subtle)
set fish_color_autosuggestion d3c2c9

# Ctrl+C feedback
set fish_color_cancel ba1a1a

# Commands (main accent)
set fish_color_command 854b71 --bold

# Comments
set fish_color_comment 81737a

# Current working directory
set fish_color_cwd 705766
set fish_color_cwd_root ba1a1a

# Command separator like `;` or `&&`
set fish_color_end f4b99f

# Errors
set fish_color_error ba1a1a

# Special characters like escapes
set fish_color_escape fbdaeb

# Selected command entry in history search
set fish_color_history_current --bold

# Host appearance
set fish_color_host 4f444a
set fish_color_host_remote ba1a1a

# Keywords like `if`, `for`
set fish_color_keyword 854b71

# Highlight results
set fish_color_match 80543f

# Default text
set fish_color_normal 211a1d

# Operators like = + =>
set fish_color_operator 705766

# Options `--flag`
set fish_color_option 705766

# Params/arguments
set fish_color_param 80543f

# Strings
set fish_color_quote 705766

# Redirect symbols `>`, `<`, `|`
set fish_color_redirection ffd8ed

# Search highlight colors
set fish_color_search_match 211a1d --background=f3e5ea

# Selection in command line
set fish_color_selection 211a1d --background=f3e5ea

set fish_color_status ba1a1a
set fish_color_user 854b71
