#######################
set fish_pager_color_background 121318
set fish_pager_color_completion c5c6d0
set fish_pager_color_description 8f9099
set fish_pager_color_prefix afc6ff --bold --underline
set fish_pager_color_progress bfc6dc
set fish_pager_color_secondary_background 1a1b20
set fish_pager_color_secondary_completion e2e2e9
set fish_pager_color_secondary_description 44464f
set fish_pager_color_secondary_prefix bfc6dc
set fish_pager_color_selected_background --background=282a2f
set fish_pager_color_selected_completion afc6ff
set fish_pager_color_selected_description e2e2e9
set fish_pager_color_selected_prefix afc6ff
