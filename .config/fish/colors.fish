# Autosuggestions (grey-ish, subtle)
set fish_color_autosuggestion 3f484b

# Ctrl+C feedback
set fish_color_cancel ffb4ab

# Commands (main accent)
set fish_color_command 84d2e5 --bold

# Comments
set fish_color_comment 899295

# Current working directory
set fish_color_cwd b2cbd2
set fish_color_cwd_root ffb4ab

# Command separator like `;` or `&&`
set fish_color_end bec5eb

# Errors
set fish_color_error ffb4ab

# Special characters like escapes
set fish_color_escape 334a50

# Selected command entry in history search
set fish_color_history_current --bold

# Host appearance
set fish_color_host bfc8cb
set fish_color_host_remote ffb4ab

# Keywords like `if`, `for`
set fish_color_keyword 84d2e5

# Highlight results
set fish_color_match bec5eb

# Default text
set fish_color_normal dee3e5

# Operators like = + =>
set fish_color_operator b2cbd2

# Options `--flag`
set fish_color_option b2cbd2

# Params/arguments
set fish_color_param bec5eb

# Strings
set fish_color_quote b2cbd2

# Redirect symbols `>`, `<`, `|`
set fish_color_redirection 004e5b

# Search highlight colors
set fish_color_search_match dee3e5 --background=252b2d

# Selection in command line
set fish_color_selection dee3e5 --background=252b2d

set fish_color_status ffb4ab
set fish_color_user 84d2e5
set fish_color_valid_path b2cbd2 --underline

